[global]
    monitor = 0
    follow = keyboard
    width = 370
    height = 350
    offset = 0x19
    padding = 2
    horizontal_padding = 2
    transparency = 25
    font = Monospace 12
    format = "<b>%s</b>\n%b"

[urgency_low]
    background = "#010000" # color0
    foreground = "#9c9b9b" # color8
    timeout = 3

[urgency_normal]
    foreground = "#dfdede" # color15
    background = "#A09F9F" # color4
    timeout = 5

[urgency_critical]
    background = "#6F6E6E" # color1
    foreground = "#dfdede" # color15
    frame_color = "#908F8F" # color11
    timeout = 10
